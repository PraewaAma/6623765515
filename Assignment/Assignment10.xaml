<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Assignment.Assignment10"
             Title="Assignment10"
             BackgroundColor="Black">
    <VerticalStackLayout>
        <Label 
            Text = "Information All of Car"
            FontSize="Header"
            TextColor="HotPink">
        </Label>
        <Label
            x:Name = "InfoCars"
            Text = "Information Here"
            FontSize="Body"
            TextColor="DeepPink">
        </Label>
        <Button
            Text="Start!!!"
            BackgroundColor="HotPink"
            Clicked="Button_Clicked">
        </Button>
        <Image
            x:Name="ImageCarNo1"
            Source="car1.jpg"
            WidthRequest="100"
            HorizontalOptions="Start">
        </Image>
        <Image
            x:Name="ImageCarNo2"
            Source="car2.jpg"
            WidthRequest="100"
            HorizontalOptions="Start">
        </Image>
        <Image
            x:Name="ImageCarNo3"
            Source="car3.jpg"
            WidthRequest="100"
            HorizontalOptions="Start">
        </Image>
    </VerticalStackLayout>
</ContentPage>